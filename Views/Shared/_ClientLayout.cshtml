@model Freelance.Models.ViewModels.HomeViewModel


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Freelance</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/avatar.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/JSFunctions.js"></script>


</head>
<body>

    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid w-100">
            @Html.ActionLink("Freelance", "CurrentUser", "User", new { area = "" }, new { @class = "navbar-brand" })
            <div class="flex-row-reverse">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        @Html.ActionLink("Hello " + User.Identity.Name + "!", "Edit", "User", new { id = User.Identity.Name }, htmlAttributes: new { title = "Edit Profile", @class = "nav-link active" })
                    </li>
                   
                    @*<li class="nav-item">
                            @Html.ActionLink("Received Proposals", "", "Client", new { }, htmlAttributes: new { title = "Received Proposals", @class = "nav-link active" })
                        </li>*@
                    <li class="nav-item">
                        @Html.ActionLink("Log Out", "CLogOut", "Client", new { }, htmlAttributes: new { title = "Log Out", @class = "nav-link active" })
                    </li>
                </ul>
            </div>


        </div>
    </nav>


    <div class="container-fluid">
        <div class="row flex-nowrap ">
            <div class="px-sm-2 px-0 bg-dark position-fixed" style="width:200px">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3  pt-2 text-white ">
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start vh-100">
                        <li class="nav-item">
                            @Html.ActionLink("Profile", "Edit", "User", new { id = User.Identity.Name }, new { @class = "nav-link  link-light align-middle px-0" })

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Create new post", "Create", "Client", new { }, new { @class = "nav-link  link-light align-middle px-0" })

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My Posts", "Index", "CLient", new { }, new { @class = "nav-link link-light align-middle px-0" })

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Received proposals", "Proposals","Client", new { id = User.Identity.Name }, new { @class = "nav-link link-light  align-middle px-0" })

                        </li>
                    </ul>
                </div>
            </div>
            <div class="col  py-3" style="margin-left:200px">
                <div class="container body-content">
                    @RenderBody()


                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - FreeLance</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
